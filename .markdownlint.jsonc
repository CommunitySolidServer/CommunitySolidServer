{
  // Enable all markdownlint rules
  "default": true,

  // Enable line length check but exclude tables and code blocks
  "MD013": {
    "line_length": 120,
    "tables": false,
    "code_blocks": false
  },

  // Allow multiple top level headings
  "MD025": false,

  // Allow multiple headings with the same content
  "MD024": false,

  // Exclude code block style
  "MD046": false,

  // Allow inline HTML
  "MD033": true,

  // Allow no heading at start of file
  "MD041": false
}
