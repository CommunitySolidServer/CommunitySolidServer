          },
          { "@id": "urn:solid-server:default:MainTemplateEngine" }
        ]
      },
      "templates": []
    },

    {
      "@id": "urn:solid-server:default:ControlHandler",
      "@type": "ControlHandler",
      "controls": [
        {
          "ControlHandler:_controls_key": "html",
