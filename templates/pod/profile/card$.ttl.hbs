@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix solid: <http://www.w3.org/ns/solid/terms#>.
@prefix pim: <http://www.w3.org/ns/pim/space#>.
@prefix acl: <http://www.w3.org/ns/auth/acl#>.

<>
    a foaf:PersonalProfileDocument;
    foaf:maker <{{webId}}>;
    foaf:primaryTopic <{{webId}}>.

<{{webId}}>
    {{#if name}}foaf:name "{{name}}";{{/if}}
    acl:trustedApp
            [
                acl:mode acl:Append, acl:Control, acl:Read, acl:Write;
                acl:origin <https://staging.mysilio.garden>
            ],
            [
                acl:mode acl:Append, acl:Control, acl:Read, acl:Write;
                acl:origin <https://mysilio.garden>
            ];
    {{#if oidcIssuer}}solid:oidcIssuer <{{oidcIssuer}}>;{{/if}}
    {{#if podBaseUrl}}
      pim:storage <{{podBaseUrl}}>;
      pim:preferencesFile <{{podBaseUrl}}settings/prefs.ttl>;
    {{/if}}
    a foaf:Person.
