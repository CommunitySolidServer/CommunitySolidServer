{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "newLine": "lf",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true
  },
  "include": [
    "index.ts",
    "bin/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/tmp"
  ]
}
