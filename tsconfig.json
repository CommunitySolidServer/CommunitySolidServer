{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "newLine": "lf",
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "stripInternal": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
