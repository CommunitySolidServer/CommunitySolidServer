{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "newLine": "lf",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "stripInternal": true
  },
  "include": [
    "bin",
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
